<div class='container mx-auto p-4 w-3/5 flex flex-col gap-3'>
  <%= button_component(label: 'Course', path: course_path(@course), type: "primary", icon_name: 'back', size: 'x-small') %>

  <div class='text-balance'>
    <div class='flex gap-3'>
      <% if @course.image.present? %>
        <img src="<%= url_for(@course.image) %>" alt="Course image" class="w-20 h-20 rounded-xl">
      <% end %>
      <div >
        <h1 class='text-lg font-bold'> <%= @module_lesson.name %> </h1>
        <p class='text-lg'> <%= @course_module.name %> </p>
      </div>
    </div>

    <%# --- Lesson content --- %>
    <div class='mt-4'>
      <%= @module_lesson.content %>
    </div>
  </div>
</div>
