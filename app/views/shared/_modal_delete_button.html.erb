<%= render ModalComponent.new do |modal| %>
  <% modal.with_header title: "Confirm Deletion", context: "Are you sure you want to delete this item?" %>

  <div data-controller="delete" data-delete-deletion-path-value="<%= @path %>">
    <%= button_tag "Delete", class: 'w-full bg-black text-white rounded-3xl p-2 text-center flex justify-center items-center', data: { action: 'click->delete#closeDelete' } %>
  </div>
<% end %>


