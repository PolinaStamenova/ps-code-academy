<%= render ModalComponent.new do |modal| %>
  <% modal.with_header title: "Create Module", context: "Start now and make someone's life easier!" %>

  <%= render FormComponent.new(
    resource: @course_module,
    action: admin_course_course_modules_path(@course),
    method: :post
  ) do |form| %>
    <% form.with_text_field name: :name, placeholder: 'Name', required: true %>

    <%= form.with_submit label: "Create Course Module" %>
  <% end %>
<% end %>
