<%= render ModalComponent.new do |modal| %>
  <% modal.with_header title: "Improve This Course", context: "The path to perfection is through improvement!" %>

  <%= render FormComponent.new(
    resource: @course,
    action: admin_course_path(@course),
    method: :patch
  ) do |form| %>
    <% form.with_text_field name: :name, placeholder: 'Name', required: true %>
    <% form.with_text_area_field name: :description, placeholder: 'Description' %>

    <%= form.with_submit label: "Update Course" %>
  <% end %>
<% end %>
